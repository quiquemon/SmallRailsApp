<div class="<%= params[:controller] %> container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Add to Team <i><%= h @team.name %></i></h1>
			<p>Here you can add new members to your team.</p>
			<a href="/manage_team/<%= @team.id %>" class="btn btn-default btn-sm">
				<span class="glyphicon glyphicon-arrow-left"></span>
				Back to Manage Team
			</a>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-6">
			<% if @is_the_team_complete %>
				<div class="alert alert-info">
					Este equipo ya está completo. Si deseas expandirlo, puedes hacerlo en la página de
					<b><a href="/update_team/<%= @team.id %>">Update Team Info</a></b>.
				</div>
			<% else %>
				<h4 class="text text-info">You can find the runner to be added through his/her email:</h4>
				<br>
				<div class="row">
					<div class="col-sm-9 col-xs-9">
						<input type="text" id="email" class="form-control" placeholder="example@mymail.com" autofocus />
					</div>
					<div class="col-sm-3 col-xs-3">
						<button id="btnFindUser" class="btn btn-primary btn-block">Search</button>
					</div>
				</div>
				<br>
				<div class="row">
					<div id="findUserBody" class="col-xs-12"></div>
				</div>
			<% end %>
		</div>
		<div class="col-sm-6">
			<div class="panel panel-warning">
				<div class="panel-heading">
					<b>Runners in this team</b>
				</div>
				<div class="panel-body">
					<div id="runnersList" class="list-group">
						<% for user in @users %>
							<a class="list-group-item">
								<%= h "#{user.name} #{user.lastname}" %> | <i><%= h user.email %></i>
							</a>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<script>
	var TEAM_ID = <%= @team.id %>;
</script>