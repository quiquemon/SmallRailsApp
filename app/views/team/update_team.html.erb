<div class="<%= params[:controller] %> container">
	<div class="row">
		<div class="col-sm-12">
			<h1>Update <i><%= h @team.name %></i></h1>
			<p class="text-justify">You can modify your team's information below.</p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div id="updateTeamBody" class="col-sm-12">
			<div class="form-group">
				<label>Name:</label>
				<div class="input-group">
					<input type="text" id="name" class="form-control" maxlength="100" value="<%= h @team.name %>" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-eye-open"></span>
					</span>
				</div>
			</div>
			<div class="form-group">
				<label>Description:</label>
				<div class="input-group">
					<input type="text" id="description" class="form-control" maxlength="100" value="<%= h @team.description %>" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-pencil"></span>
					</span>
				</div>
			</div>
			<div class="form-group">
				<label>Number of members:</label>
				<select id="members" class="form-control">
					<% 2.upto(10) do |i| %>
						<option value="<%= i %>" <%= (@team.memberNumber == i) ? 'selected' : '' %>><%= i %></option>
					<% end %>
				</select>
			</div>
			<button id="btnUpdateTeam" class="btn btn-primary">Update</button>
			<a href="/manage_team/<%= @team.id %>" class="btn btn-danger">Cancel</a>
			<br><br>
		</div>
	</div>
</div>
<script>
	var TEAM_ID = <%= @team.id %>
</script>