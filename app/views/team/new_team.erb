<div class="<%= params[:controller] %> container">
	<div class="row">
		<div class="col-sm-12">
			<h1>New Team</h1>
			<p class="text-justify">Enter your team's information below.</p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div id="newTeamBody" class="col-sm-12">
			<div class="form-group">
				<label>Name:</label>
				<div class="input-group">
					<input type="text" id="name" class="form-control" maxlength="100" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-eye-open"></span>
					</span>
				</div>
			</div>
			<div class="form-group">
				<label>Description:</label>
				<div class="input-group">
					<input type="text" id="description" class="form-control" maxlength="100" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-pencil"></span>
					</span>
				</div>
			</div>
			<div class="form-group">
				<label>Number of members:</label>
				<select id="members" class="form-control">
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
				</select>
			</div>
			<button id="btnNewTeam" class="btn btn-primary">Create</button>
			<a href="/teams" class="btn btn-danger">Cancel</a>
			<br><br>
		</div>
	</div>
</div>