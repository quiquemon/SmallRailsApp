<div class="<%= params[:controller] %> container">
	<div class="row">
		<div class="col-sm-12">
			<% if flash[:notice] %>
				<div class="alert alert-<%= flash[:alert_type] %> alert-dismissable">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<%= flash[:notice] %>
				</div>
			<% end %>
			<h1>Team Management</h1>
			<p class="text-justify">You can create, join or update your teams here.</p>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-sm-12">
			<h2>My Teams</h2>
			<br>
			<a href="/new_team" class="btn btn-primary">
				<span class="glyphicon glyphicon-plus"></span>
				New Team
			</a>
			<br>
			<br>
		</div>
	</div>
	<% unless @teams.blank? %>
		<% for team_group in @teams %>
			<div class="row">
				<% for team in team_group %>
					<% unless team.nil? %>
						<div class="col-sm-4">
							<div class="panel panel-info">
								<div class="panel-heading">
									<b><%= h team.name %></b>
								</div>
								<div class="panel-body">
									<p class="text-justify"><%= h team.description %></p>
									<a href="/manage_team/<%= team.id %>" class="btn btn-info">Manage Team</a>
								</div>
							</div>
						</div>
					<% end %>
				<% end %>
			</div>
		<% end %>
	<% else %>
		<div class="row">
			<div class="col-sm-12">
				<div class="alert alert-info">
					Aún no has creado ni te has unido a ningún equipo.
				</div>
			</div>
		</div>
	<% end %>
</div>